[Unit]
Description=Service for starting minecraft server
After=local-fs.target network.target multi-user.target

[Service]
Type=simple
WorkingDirectory=/home/{{ user }}/minecraft
ExecStart=/usr/bin/java -Xms4G -Xmx4G -jar /home/{{ user }}/minecraft/server.jar --nogui
ExecStop=/bin/kill -15 $MAINPID
User={{ user }}

[Install]
WantedBy=multi-user.target
